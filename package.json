{
  "private": true,
  "name": "til-by-webdonalds",
  "description": "",
  "license": "",
  "scripts": {
    "postinstall": "remix setup node",
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -i ./app/root.css -o ./app/styles/tailwind.css --config ./config/tailwind.js --minify",
    "dev": "concurrently \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./app/root.css -o ./app/styles/tailwind.css --config ./config/tailwind.js --watch",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@urql/core": "^2.4.1",
    "dayjs": "^1.10.7",
    "graphql": "^16.1.0",
    "marked": "^4.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "remix-auth": "^2.5.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.1",
    "@types/marked": "^4.0.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.4",
    "concurrently": "^6.5.0",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.22",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}
