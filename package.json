{
  "private": true,
  "name": "til-by-webdonalds",
  "description": "",
  "license": "",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "tailwindcss -i ./app/root.css -o ./app/styles/tailwind.css --config ./config/tailwind.js --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build",
    "dev": "concurrently \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./app/root.css -o ./app/styles/tailwind.css --config ./config/tailwind.js --watch",
    "start": "cross-env NODE_ENV=production node ./build/server.js"
  },
  "dependencies": {
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "@urql/core": "^2.4.4",
    "@urql/exchange-request-policy": "^0.1.5",
    "dayjs": "^1.11.2",
    "graphql": "^16.5.0",
    "highlight.js": "^11.5.1",
    "marked": "^4.0.15",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "remix-auth": "^3.2.2",
    "remix-auth-auth0": "^1.3.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.3",
    "@tailwindcss/forms": "^0.5.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "yarn-run-all": "^3.1.1"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}
