{
  "private": true,
  "name": "til-by-webdonalds",
  "description": "",
  "license": "",
  "scripts": {
    "build": "yarn build:css && remix build",
    "dev": "concurrently \"yarn dev:css\" \"remix watch\"",
    "postinstall": "remix setup cloudflare-workers",
    "build:css": "tailwindcss -i ./app/root.css -o ./app/styles/tailwind.css --config ./config/tailwind.js --minify",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev:css": "tailwindcss -i ./app/root.css -o ./app/styles/tailwind.css --config ./config/tailwind.js --watch",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "start": "miniflare --build-command \"yarn dev:worker\" --watch",
    "deploy": "yarn build && wrangler publish"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.0.6",
    "@remix-run/react": "^1.0.6",
    "@urql/core": "^2.3.6",
    "graphql": "^16.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.5.0",
    "esbuild": "0.13.14",
    "miniflare": "2.0.0-next.3",
    "tailwindcss": "^3.0.6",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
